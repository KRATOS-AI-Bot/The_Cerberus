
import os

class CerberusIgnore:
    def __init__(self, ignore_file='.cerberusignore'):
        self.ignore_file = ignore_file
        self.ignore_paths = self.load_ignore_paths()

    def load_ignore_paths(self):
        ignore_paths = []
        if os.path.exists(self.ignore_file):
            with open(self.ignore_file, 'r') as f:
                for line in f.readlines():
                    line = line.strip()
                    if line:
                        ignore_paths.append(line)
        return ignore_paths

    def is_ignored(self, path):
        for ignore_path in self.ignore_paths:
            if path.startswith(ignore_path):
                return True
        return False

def main():
    ignore = CerberusIgnore()
    print(ignore.ignore_paths)

if __name__ == '__main__':
    main()
